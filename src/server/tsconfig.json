{
    "extends": "../../tsconfig.json",
    "exclude": [
        "src/app"
    ],
    "compilerOptions": {
        "outDir": "../../dist/server",
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "es6",
        "baseUrl": "./",
        "paths": {
            "src/*": [
                "../*"
            ],
            "server/*": [
                "./*"
            ],
            "app/*": [
                "../app/*"
            ],
        }
    }
}